<h1>Listing price_rules</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Rule type</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @price_rules.each do |price_rule| %>
  <tr>
    <td><%= price_rule.product.name %></td>
    <td><%= price_rule.rule_type %></td>
    <td><%= price_rule.discount_value %></td>
    <td><%= link_to 'Show', [price_rule.product, price_rule] %></td>
    <td><%= link_to 'Edit', edit_product_price_rule_path(price_rule.product, price_rule) %></td>
    <td><%= button_to 'Destroy', [price_rule.product, price_rule], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

